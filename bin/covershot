#!/usr/bin/env node
var fs = require('fs');
var path = require('path');
var optimist = require('optimist');
var cli = require('../lib/cli');

var argv = optimist
  .usage('Usage: covershot [options] [file]')
  .options('f', {
    alias: 'format',
    default: 'html',
    describe: 'Desired output format. [html, json, plain]'
  })
  .options('m', {
    alias: 'map',
    default: 'json',
    describe: 'Input data format mapper to use. [json, vows]'
  })
  .options('w', {
    alias: 'write',
    default: path.join(process.cwd(), 'covershot'),
    describe: 'Directory to write output to.'
  })
  .options('v', {
    alias: 'verbose',
    default: 'false'
  })
  .alias('help', 'h')
  .alias('h', '?')
  .argv;

if (argv.help) {
  optimist.showHelp();
  process.exit(0);
}

cli.run(argv);
